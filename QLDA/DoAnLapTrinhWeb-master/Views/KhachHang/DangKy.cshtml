<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Đăng ký Electro</title>

    <!-- Font Icon -->
    <!-- Main css -->
    <link rel="stylesheet" href="~/Dang_Ky/css/style.css" />
</head>
<body>
    <section class="containerdm">

        @{ ViewBag.Title = "DangKy";
            Layout = "~/Views/Shared/_LayoutKhachHang.cshtml"; }

        <h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
        <table align="center">
            @using (Html.BeginForm("DangKy", "KhachHang"))
            {
                @Html.ValidationSummary(true)
                <tr>
                    <td>Họ tên:</td>
                    <td>@Html.TextBox("HoTen") @ViewData["err1"]</td>
                </tr>
                <tr>
                    <td>Tên đăng nhập:</td>
                    <td>@Html.TextBox("TenDN") @ViewData["err2"]</td>
                </tr>
                <tr>
                    <td>Mật khẩu:</td>
                    <td>@Html.Password("MatKhau") @ViewData["err3"]</td>
                </tr>
                <tr>
                    <td>>Mật khẩu nhập lại:</td>
                    <td>@Html.Password("MatKhauNL") @ViewData["err4"]</td>
                </tr>
                <tr>
                    <td>>Email:</td>
                    <td>@Html.TextBox("Email") @ViewData["err5"]</td>
                </tr>
                <tr>
                    <td>>Điện thoại:</td>
                    <td>@Html.TextBox("DienThoai") @ViewData["err6"]</td>
                </tr>
                <tr>
                    <td>>Địa chỉ:</td>
                    <td><input type="text" name="DiaChi" /></td>
                </tr>
                <tr>
                    <td>></td>
                    <td><input type="submit" value="Đăng ký" /><input type="reset" value="Xóa thông tin" /></td>
                </tr>
}
        </table>




                </section>
</body>
</html>
